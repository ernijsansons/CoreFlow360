# CoreFlow360 Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# üöÄ DEPLOYMENT CONFIGURATION
# =============================================================================

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js - CRITICAL: Generate a new secret for production
NEXTAUTH_SECRET=your-super-secret-key-here-32-chars-min
NEXTAUTH_URL=https://your-domain.com

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security
CSRF_SECRET=your-csrf-secret-here
ENCRYPTION_KEY=your-32-char-encryption-key-here

# =============================================================================
# üíæ DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database - Use Vercel Postgres or external provider
DATABASE_URL="postgresql://username:password@hostname:port/database"

# Database Pool Configuration
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# =============================================================================
# üí≥ PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Product/Price IDs for subscription tiers
STRIPE_NEURAL_PRICE_ID=price_neural_monthly
STRIPE_SYNAPTIC_PRICE_ID=price_synaptic_monthly
STRIPE_AUTONOMOUS_PRICE_ID=price_autonomous_monthly
STRIPE_TRANSCENDENT_PRICE_ID=price_transcendent_monthly

# =============================================================================
# üìß EMAIL CONFIGURATION
# =============================================================================

# Email Provider (sendgrid | resend)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Resend Configuration (if using Resend)
RESEND_API_KEY=re_your-resend-api-key-here

# Email Settings
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME="CoreFlow360"
EMAIL_TRACKING_ENABLED=true

# =============================================================================
# ü§ñ AI SERVICES
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-org-id

# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AI Feature Flags
AI_FEATURES_ENABLED=true
AI_COST_TRACKING_ENABLED=true

# =============================================================================
# üìû VOICE & COMMUNICATION
# =============================================================================

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Voice Features
VOICE_FEATURES_ENABLED=true
VOICE_RECORDING_ENABLED=true
VOICE_TRANSCRIPTION_ENABLED=true

# =============================================================================
# üìä ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Performance Monitoring
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# üéØ CACHE & REDIS
# =============================================================================

# Redis Configuration (Optional - for advanced caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# =============================================================================
# üõ°Ô∏è PRIVACY & COMPLIANCE
# =============================================================================

# Privacy Features
PRIVACY_AUDIT_ENABLED=true
GDPR_COMPLIANCE_MODE=true
CCPA_COMPLIANCE_MODE=true
PRIVACY_WEBHOOK_SECRET=your-privacy-webhook-secret

# Data Retention
DATA_RETENTION_DAYS=2555  # 7 years for compliance
LOG_RETENTION_DAYS=90

# =============================================================================
# üöÄ FEATURE FLAGS
# =============================================================================

# Core Features
MULTI_TENANT_ENABLED=true
SUBSCRIPTION_BILLING_ENABLED=true
API_RATE_LIMITING_ENABLED=true

# Advanced Features
WORKFLOW_AUTOMATION_ENABLED=true
AI_RISK_ASSESSMENT_ENABLED=true
REAL_TIME_MONITORING_ENABLED=true

# Beta Features
BETA_FEATURES_ENABLED=false
EXPERIMENTAL_FEATURES_ENABLED=false

# =============================================================================
# üîß INFRASTRUCTURE
# =============================================================================

# File Storage (if using external storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# CDN Configuration
CDN_URL=https://cdn.your-domain.com

# =============================================================================
# üìà BUSINESS CONFIGURATION
# =============================================================================

# Company Information
COMPANY_NAME="CoreFlow360"
COMPANY_DOMAIN=your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# Pricing Configuration
DEFAULT_TRIAL_DAYS=14
MAX_USERS_PER_TENANT=1000
DEFAULT_CURRENCY=USD

# =============================================================================
# üîç LOGGING & DEBUGGING
# =============================================================================

# Logging Levels
LOG_LEVEL=info
DEBUG_ENABLED=false
VERBOSE_LOGGING=false

# Database Logging
DATABASE_LOGGING=false
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# üåç INTERNATIONALIZATION
# =============================================================================

# Localization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,pt
TIMEZONE=UTC

# =============================================================================
# üîê SECURITY HEADERS & POLICIES
# =============================================================================

# Content Security Policy
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# üéõÔ∏è ADMIN & MAINTENANCE
# =============================================================================

# Admin Access
ADMIN_EMAIL=admin@your-domain.com
SUPER_ADMIN_TOKEN=your-super-admin-token

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30