#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“‹ Running ESLint..."
npm run lint

# Check TypeScript compilation
echo "ğŸ”§ Checking TypeScript..."
npx tsc --noEmit

# Run tests for staged files
echo "ğŸ§ª Running relevant tests..."
npm run test:ui:components

# Check for console.log statements (warn only)
echo "ğŸš¨ Checking for console.log statements..."
git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | xargs grep -l 'console\.' || true

echo "âœ… Pre-commit checks complete!"