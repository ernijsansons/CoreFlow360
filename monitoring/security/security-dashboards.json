{
  "dashboard": {
    "id": null,
    "title": "CoreFlow360 - Security Monitoring Dashboard",
    "tags": ["coreflow360", "security", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Threat Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(security_incidents_total[5m]))",
            "legendFormat": "Incidents/sec",
            "refId": "A"
          },
          {
            "expr": "sum(security_vulnerabilities_critical)",
            "legendFormat": "Critical Vulns",
            "refId": "B"
          },
          {
            "expr": "sum(security_failed_auth_attempts_total)",
            "legendFormat": "Failed Auth",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Authentication Security",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nginx_ingress_controller_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4XX Errors - {{method}} {{status}}",
            "refId": "A"
          },
          {
            "expr": "rate(auth_failed_attempts_total[5m])",
            "legendFormat": "Failed Auth Attempts",
            "refId": "B"
          },
          {
            "expr": "rate(auth_successful_total[5m])",
            "legendFormat": "Successful Auth",
            "refId": "C"
          }
        ],
        "xAxis": {"show": true},
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Network Security Events",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, increase(network_policy_blocked_connections_total[1h]))",
            "legendFormat": "{{source_namespace}}/{{source_pod}} -> {{dest_namespace}}/{{dest_pod}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "displayName",
                  "value": "Blocked Connections"
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Container Security Status",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (severity) (container_vulnerabilities)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "orange", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Security Compliance Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "security_compliance_score",
            "legendFormat": "Compliance %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 85}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Certificate Expiry",
        "type": "stat",
        "targets": [
          {
            "expr": "(ssl_certificate_expiry_seconds - time()) / 86400",
            "legendFormat": "{{domain}} - Days to Expiry",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 7},
                {"color": "orange", "value": 30},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Secret Rotation Status",
        "type": "stat",
        "targets": [
          {
            "expr": "(time() - secret_last_rotation_timestamp) / 86400",
            "legendFormat": "{{secret_name}} - Days since rotation",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "orange", "value": 60},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 8,
        "title": "Pod Security Context Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pod_security_violations_total)",
            "legendFormat": "Security Violations",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24}
      },
      {
        "id": 9,
        "title": "Security Audit Log Events",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"audit-logs\"} |= \"security\" | json",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "wrapLogMessage": true
        },
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "API Rate Limiting",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate Limit Exceeded - {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "rate(api_requests_total[5m])",
            "legendFormat": "Total Requests - {{endpoint}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 44}
      },
      {
        "id": 11,
        "title": "Service Mesh Security",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(istio_request_total{security_policy=\"mtls\"}[5m])",
            "legendFormat": "mTLS Requests - {{source_app}} -> {{destination_service_name}}",
            "refId": "A"
          },
          {
            "expr": "rate(istio_request_total{response_code=~\"4..|5..\"}[5m])",
            "legendFormat": "Failed Requests - {{source_app}} -> {{destination_service_name}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 44}
      },
      {
        "id": 12,
        "title": "Vulnerability Scan Results",
        "type": "heatmap",
        "targets": [
          {
            "expr": "increase(vulnerability_scan_results_total[1h])",
            "legendFormat": "{{severity}} - {{component}}",
            "refId": "A"
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true,
          "logBase": 1
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 52}
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Security Incidents",
          "datasource": "prometheus",
          "enable": true,
          "expr": "security_incident_created",
          "iconColor": "red",
          "titleFormat": "Security Incident: {{severity}}",
          "textFormat": "{{description}}"
        },
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "deployment_created",
          "iconColor": "blue",
          "titleFormat": "Deployment: {{app}}",
          "textFormat": "Version {{version}} deployed"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_namespace_info, namespace)",
          "current": {
            "value": "coreflow360",
            "text": "coreflow360"
          },
          "includeAll": false,
          "multi": false
        },
        {
          "name": "severity",
          "type": "custom",
          "options": [
            {"value": "critical", "text": "Critical"},
            {"value": "high", "text": "High"},
            {"value": "medium", "text": "Medium"},
            {"value": "low", "text": "Low"}
          ],
          "current": {
            "value": "all",
            "text": "All"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}