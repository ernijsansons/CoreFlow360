{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsbuildinfo.json",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "v0-deployed",
    ".v0-deployed-backup",
    "messaging-backup*",
    "backups/**/*",
    "build/**/*",
    "coverage/**/*",
    "src/__tests__/**/*",
    "src/lib/websocket/**/*",
    "src/scripts/deploy.ts",
    "src/components/sustainability/**/*",
    "src/core/events/**/*",
    "src/hooks/useEnhancedTracking.tsx",
    "src/integrations/**/*",
    "src/lib/accessibility/**/*",
    "src/lib/ai/ai-model-performance-orchestrator.ts",
    "src/lib/crm/proposal-builder-engine.ts",
    "src/lib/marketing/**/*",
    "src/lib/monitoring/**/*",
    "src/lib/testing/**/*",
    "src/lib/voice/**/*",
    "src/lib/websocket-server.ts",
    "src/components/lead-scoring/MultiBusinessLeadScoring.tsx",
    "src/lib/ai/business-recommendations-engine.ts",
    "src/lib/event-bus/**/*",
    "src/lib/ai/conversation-engine.ts",
    "src/lib/ai/dynamic-integration-system.ts",
    "src/lib/audit/**/*",
    "src/lib/cache/**/*",
    "src/lib/cdn/**/*",
    "src/lib/config/**/*",
    "prisma/seed-modules.ts",
    "prisma/seed-production.ts",
    "scripts/**/*"
  ]
}
