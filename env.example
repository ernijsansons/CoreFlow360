# CoreFlow360 Environment Configuration
# Copy this file to .env.local and fill in the values
# For production, ensure all required values are properly configured

# ============================================
# CORE CONFIGURATION (REQUIRED)
# ============================================

# Environment Mode - MUST be "production" for production deployments
NODE_ENV="development"

# Application URL - MUST use HTTPS in production
NEXTAUTH_URL="http://localhost:3000"

# Authentication Secret - MUST be at least 32 characters, generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-32-characters-minimum"

# API Security Secret - MUST be at least 32 characters, used for API key generation
API_KEY_SECRET="your-api-key-secret-32-characters-minimum"

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================

# Primary database connection - Use connection pooling for production
DATABASE_URL="postgresql://user:password@localhost:5432/coreflow360?schema=public"

# Direct database connection (for migrations) - Optional but recommended
DATABASE_URL_UNPOOLED="postgresql://user:password@localhost:5432/coreflow360?schema=public"

# ============================================
# PAYMENT PROCESSING - STRIPE (REQUIRED)
# ============================================

# Stripe API Keys - Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Stripe Webhook Secret - Get from Stripe webhook endpoint settings
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# ============================================
# AI SERVICES (REQUIRED FOR CONSCIOUSNESS)
# ============================================

# OpenAI API Key - Required for consciousness features
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic API Key - Optional for multi-provider AI
ANTHROPIC_API_KEY=""

# Google AI API Key - Optional for multi-provider AI
GOOGLE_AI_API_KEY=""

# ============================================
# EMAIL CONFIGURATION (REQUIRED)
# ============================================

# Email From Address
EMAIL_FROM="noreply@coreflow360.com"

# Resend API Key (Recommended email provider)
RESEND_API_KEY="re_your_resend_api_key"

# Alternative: SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"

# ============================================
# MONITORING & PERFORMANCE (RECOMMENDED)
# ============================================

# Redis for caching and rate limiting
REDIS_URL="redis://localhost:6379"

# Sentry for error tracking
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
NEXT_PUBLIC_SENTRY_DSN=""

# ============================================
# CDN & ASSETS (OPTIONAL)
# ============================================

# CDN URL for static assets
NEXT_PUBLIC_CDN_URL=""

# Image optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""

# ============================================
# OAUTH PROVIDERS (OPTIONAL)
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ============================================
# MAPPING & LOCATION SERVICES (OPTIONAL)
# ============================================

# Google Maps API Key - For territory management features
GOOGLE_MAPS_API_KEY=""

# ============================================
# SECURITY CONFIGURATION (OPTIONAL)
# ============================================

# Feature flags
SECURITY_HEADERS_ENABLED="true"
RATE_LIMIT_ENABLED="true"
CSRF_PROTECTION_ENABLED="true"

# Session configuration
SESSION_MAX_AGE="28800" # 8 hours in seconds

# ============================================
# CONSCIOUSNESS CONFIGURATION (OPTIONAL)
# ============================================

# Feature flags
CONSCIOUSNESS_FEATURES_ENABLED="true"
PREFERRED_AI_PROVIDER="openai"

# Performance budgets (milliseconds)
CONSCIOUSNESS_PERFORMANCE_BUDGET="100"

# ============================================
# LOGGING & DEBUGGING (OPTIONAL)
# ============================================

LOG_LEVEL="info" # debug, info, warn, error
ENABLE_QUERY_LOGGING="false"
ENABLE_PERFORMANCE_LOGGING="true"

# ============================================
# PRODUCTION DEPLOYMENT (PLATFORM SPECIFIC)
# ============================================

# Vercel specific
VERCEL_URL=""
VERCEL_ENV=""

# AWS specific
AWS_REGION=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
